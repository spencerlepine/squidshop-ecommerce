{
  "plugins": [
    "jsx"
  ],
  "rules": {
    "no-undef": "off",
    "no-unused-vars": "off",
    "global-require": "warn",
    "testing-library/no-node-access": "off",
    "react/jsx-filename-extension": [
      "warn",
      {
        "extensions": [
          ".tsx"
        ]
      }
    ]
  },
  "extends": [
    "@spencerlepine/eslint-config-react",
    "react-app",
    "react-app/jest"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "ignorePatterns": [
    "**/build/*"
  ],
}