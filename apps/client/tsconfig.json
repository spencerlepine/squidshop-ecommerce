{
  "compilerOptions": {
    "outDir": "./build/",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "es6",
      "dom"
    ],
    "noImplicitThis": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.js",
    "dist"
  ]
}